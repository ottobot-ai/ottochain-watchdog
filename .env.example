# ===========================================
# OttoChain Monitoring Configuration
# ===========================================
# Copy to .env and fill in your values

# ----- Health Monitor -----
# Comma-separated list of metagraph node IPs
NODE_IPS=10.0.0.1,10.0.0.2,10.0.0.3
NODE_NAMES=node1,node2,node3

# SSH access for restart commands
SSH_KEY_PATH=~/.ssh/hetzner_ottobot
SSH_USER=root

# Thresholds
SNAPSHOT_STALL_MINUTES=4
HEALTH_CHECK_INTERVAL=60
RESTART_COOLDOWN_MINUTES=10
MAX_RESTARTS_PER_HOUR=6

# Notification webhook (Discord/Slack/Telegram)
WEBHOOK_URL=https://discord.com/api/webhooks/...

# ----- Telegram Alerts (Alertmanager) -----
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=-100123456789

# ----- Server IPs -----
# IP of this monitoring server (for external URLs)
ALERT_SERVER_IP=YOUR_ALERTS_SERVER_IP

# ----- Grafana -----
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme
GRAFANA_ROOT_URL=http://localhost:3000

# Anonymous access for status page (default: enabled)
GRAFANA_ANONYMOUS_ENABLED=true

# ----- PostgreSQL Exporter (services server only) -----
POSTGRES_USER=ottochain
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=ottochain

# ----- Version -----
VERSION=latest
