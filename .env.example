# ===========================================
# OttoChain Monitoring Configuration
# ===========================================
# Copy to .env and fill in your values

# ----- Telegram Alerts -----
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=-100123456789

# ----- Server IPs -----
# IP address of this monitoring server (for external URLs)
ALERT_SERVER_IP=YOUR_ALERTS_SERVER_IP

# IP of the metagraph node(s) running GL0/ML0/CL1/DL1
METAGRAPH_HOST=YOUR_METAGRAPH_IP

# IP of the services server running bridge/indexer/gateway/monitor
SERVICES_HOST=YOUR_SERVICES_IP

# ----- Grafana -----
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme
GRAFANA_ROOT_URL=http://localhost:3000

# ----- PostgreSQL Exporter (services server only) -----
POSTGRES_USER=ottochain
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=ottochain

# ----- Optional: Loki logging -----
# Uncomment to enable Loki
# LOKI_ENABLED=true
