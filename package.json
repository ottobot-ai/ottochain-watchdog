{
  "name": "ottochain-watchdog",
  "version": "0.2.0",
  "description": "Self-healing watchdog for OttoChain metagraph. Reads health from services monitor, restarts nodes via SSH when needed.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "check": "node dist/index.js --once",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "ioredis": "^5.6.1",
    "pg": "^8.14.1",
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.3",
    "@types/pg": "^8.18.0",
    "@types/ssh2": "^1.15.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ottobot-ai/ottochain-watchdog.git"
  },
